{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./../src/*"],
      "@common/*": ["./src/*"]
    }
  },
  "include": [
    "../next-env.d.ts",
    "../next-auth.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "../src/**/*.ts",
    "../src/**/*.tsx",
    "../src/**/*.js"
  ],
  "exclude": ["node_modules"]
}
